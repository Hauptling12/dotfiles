#!/bin/sh

export EDITOR="nvim"
export TERMANIL="st"
export BROWSER="librewolf"
export PLAYER="mpv"
export CLI_BROWSER="w3m"

# Adds `~/.local/bin` to $PATH
export PATH="$PATH:${$(find ~/.local/bin -type d -printf %p:)%%:}:${$(find ~/.local/bin/script -type d -printf %p:)%%:}"
# ~/ clean-up:
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config/"
export XDG_CACHE_HOME="$HOME/.cache"
export XINITRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc"
export ANDROID_SDK_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/android"
export MBSYNCRC="${XDG_CONFIG_HOME:-$HOME/.config}/mbsync/config"
export LYNX_CFG_PATH="$XDG_CONFIG_HOME"/lynx.cfg
export NVM_DIR="$XDG_DATA_HOME"/nvm
export GRIPHOME="$XDG_CONFIG_HOME/grip"
export WINEPREFIX="${XDG_DATA_HOME}/wine"
export ZDOTDIR="$HOME/.config/zsh"
export GTK2_RC_FILES="$HOME/.config/gtk-2.0/gtkrc-2.0"
export XAUTHORITY="$XDG_RUNTIME_DIR"/Xauthority
export ANDROID_SDK_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/android"
export CARGO_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/cargo"
export GOPATH="${XDG_DATA_HOME:-$HOME/.local/share}/go"
export TMUX_TMPDIR="$XDG_RUNTIME_DIR"
export NOTMUCH_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/notmuch-config"
export LESSHISTFILE="-"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/password-store"
#export XINITRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc"
export CABAL_CONFIG="$XDG_CONFIG_HOME"/cabal/config
export CABAL_DIR="$XDG_DATA_HOME"/cabal
export PARALLEL_HOME="$XDG_CONFIG_HOME"/parallel
export STACK_ROOT="$XDG_DATA_HOME"/stack
export DVDCSS_CACHE="$XDG_DATA_HOME"/dvdcss
export CONAN_USER_HOME="$XDG_CONFIG_HOME"
export USERXSESSION="$XDG_CACHE_HOME/x11/xsession"
export USERXSESSIONRC="$XDG_CACHE_HOME/x11/xsessionrc"
export ALTUSERXSESSION="$XDG_CACHE_HOME/x11/Xsession"
export ERRFILE="$XDG_CACHE_HOME/x11/xsession-errors"
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
#export XDG_CONFIG_HOME/byobu
export LEIN_HOME="$XDG_DATA_HOME"/lein
export GNUPGHOME="$XDG_DATA_HOME"/gnupg

doas loadkeys $HOME/.local/share/larbs/ttymaps.kmap

# other programs
export QT_QPA_PLATFORMTHEME="gtk2"  # Have QT use gtk2 theme.
export DICS="${$XDG_DATA_HOME}/dict"
