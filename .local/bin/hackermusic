#playlist="$HOME/.hackermusic.m3u"
playlist="https://www.youtube.com/playlist?list=PLcUid3OP_4OWTsEIqSOuuULVn3L8lSGD-"
id="PLcUid3OP"
icon="/usr/share/icons/breeze/actions/64/media-default-track.svg"

#kill any running instance
let p="$(ps aux|grep "$id"|awk '{print $2}'|wc -l)"

if [ $p -gt 1 ]
then
  echo "Killing..."
  notify-send -t 3000 --icon=$icon "Hacker's Playlist" "Killing"
  ps aux|grep "$id"|awk '{print $2}'|tr "\n" " "|xargs kill 
else
  notify-send -t 3000 --icon=$icon "Hacker's Playlist" "Playing"
  #play music with sockets for controls
  #mpv --volume 50 --input-ipc-server=/tmp/mpvsocket --no-video --shuffle "$playlist"
  mpv --input-ipc-server=/tmp/mpvsocket --no-video --shuffle "$playlist"
fi
