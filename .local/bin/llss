#!/bin/bash

# in progtess dectect is in tty then not show icons



# works
INT1=$(/usr/bin/exa -alh  | wc -l)
INT2=40
if [ $INT1 -lt $INT2 ] 
then 
/usr/bin/exa -alghiUu --git --group-directories-first --color=auto --sort=extensions
else 
/usr/bin/exa -alghiUu --git --group-directories-first --color=auto --sort=extensions
fi